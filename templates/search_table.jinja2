<details open>
    <summary><b>Search:</b></summary>

    <form action="/search">
        <div class="search-form flex-col">
            <div class="flex-row">
                <span class="search-label">Characters:</span>
                <span>
                    <select id="c1_search" name="c1">
                        <option value="any" {% if not c1 %} selected="selected" {% endif %} >Any</option>
                        <option value="absa" {% if c1 == 'absa' %} selected="selected" {% endif %}>Absa</option>
                        <option value="clairen" {% if c1 == 'clairen' %} selected="selected" {% endif %}>Clairen</option>
                        <option value="etalus" {% if c1 == 'etalus' %} selected="selected" {% endif %}>Etalus</option>
                        <option value="fleet" {% if c1 == 'fleet' %} selected="selected" {% endif %} >Fleet</option>
                        <option value="forsburn" {% if c1 == 'forsburn' %} selected="selected" {% endif %}>Forsburn</option>
                        <option value="kragg" {% if c1 == 'kragg' %} selected="selected" {% endif %}>Kragg</option>
                        <option value="loxodont" {% if c1 == 'loxodont' %} selected="selected" {% endif %}>Loxodont</option>
                        <option value="maypul" {% if c1 == 'maypul' %} selected="selected" {% endif %}>Maypul</option>
                        <option value="olympia" {% if c1 == 'olympia' %} selected="selected" {% endif %}>Olympia</option>
                        <option value="orcane" {% if c1 == 'orcane' %} selected="selected" {% endif %}>Orcane</option>
                        <option value="ranno" {% if c1 == 'ranno' %} selected="selected" {% endif %}>Ranno</option>
                        <option value="wrastor" {% if c1 == 'wrastor' %} selected="selected" {% endif %}>Wrastor</option>
                        <option value="zetterburn" {% if c1 == 'zetterburn' %} selected="selected" {% endif %}>Zetterburn</option>
                    </select>
                </span>
                <span> vs. </span>
                <span>
                    <select id="c2_search" name="c2">
                        <option value="any" {% if not c2 %} selected="selected" {% endif %} >Any</option>
                        <option value="absa" {% if c2 == 'absa' %} selected="selected" {% endif %}>Absa</option>
                        <option value="clairen" {% if c2 == 'clairen' %} selected="selected" {% endif %}>Clairen</option>
                        <option value="etalus" {% if c2 == 'etalus' %} selected="selected" {% endif %}>Etalus</option>
                        <option value="fleet" {% if c2 == 'fleet' %} selected="selected" {% endif %} >Fleet</option>
                        <option value="forsburn" {% if c2 == 'forsburn' %} selected="selected" {% endif %}>Forsburn</option>
                        <option value="kragg" {% if c2 == 'kragg' %} selected="selected" {% endif %}>Kragg</option>
                        <option value="loxodont" {% if c2 == 'loxodont' %} selected="selected" {% endif %}>Loxodont</option>
                        <option value="maypul" {% if c2 == 'maypul' %} selected="selected" {% endif %}>Maypul</option>
                        <option value="olympia" {% if c2 == 'olympia' %} selected="selected" {% endif %}>Olympia</option>
                        <option value="orcane" {% if c2 == 'orcane' %} selected="selected" {% endif %}>Orcane</option>
                        <option value="ranno" {% if c2 == 'ranno' %} selected="selected" {% endif %}>Ranno</option>
                        <option value="wrastor" {% if c2 == 'wrastor' %} selected="selected" {% endif %}>Wrastor</option>
                        <option value="zetterburn" {% if c2 == 'zetterburn' %} selected="selected" {% endif %}>Zetterburn</option>
                    </select>
                </span>
            </div>
            <div class="flex-row">
                <span class="search-label">Players: </span>
                <span><input type="text" id="p1_search" name="p1" placeholder="Tag" autocomplete="off" {% if p1 %} value="{{p1}}" {% endif %}/></span>
                <span> vs. </span>
                <span><input type="text" id="p2_search" name="p2" placeholder="Tag" autocomplete="off" {% if p2 %} value="{{p2}}" {% endif %}/></span>
            </div>
            <div class="flex-row">
                <label for="event_search" class="search-label">Event: </label>
                <span><input type="text" id="event_search" name="event" placeholder="Event" autocomplete="off" {% if event %} value="{{event}}" {% endif %}/></span>
            </div>
            <div class="flex-row">
                <label for="rank_search" class="search-label">Ranking: </label>
                <span>
                    <select id="rank_search" name="rank">
                        <option value="any" {% if not rank %} selected="selected" {% endif %} >Any</option>
                        <option value="one_lunarank" {% if rank == 'one_lunarank' %} selected="selected" {% endif %}>At least one LunaRank player</option>
                        <option value="two_lunarank" {% if rank == 'two_lunarank' %} selected="selected" {% endif %}>Two LunaRank players</option>
                        <option value="one_alexrank" {% if rank == 'one_alexrank' %} selected="selected" {% endif %}>At least one AlexList player</option>
                        <option value="two_alexrank" {% if rank == 'two_alexrank' %} selected="selected" {% endif %}>Two AlexList players</option>
                    </select>
                </span>
                <span>(<a href="https://docs.google.com/spreadsheets/d/1CYgG-m4udT1KzJXZpwlLkka4Sbn9Hx_jIUwcZsF0sIc/edit?gid=0#gid=0">LunaRank</a>, <a href="https://github.com/akbiggs/vods2/blob/main/data/alexrank.txt">AlexList</a>)</span>
            </div>
        </div>
        <input type="submit" value="Search"/>
    </form>
</details>
